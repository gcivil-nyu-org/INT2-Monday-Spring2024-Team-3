option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "nyu_event.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "nyu_event.wsgi:application"

container_commands:
  00_merge_migrations:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations --merge --noinput"
    leader_only: true
  01_makemigrations:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations --noinput"
    leader_only: true
  02_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true
  03_superuser:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsu"
    leader_only: true
  04_collectstatic:
    command: "source /var/app/venv/*/bin/activate && mkdir -p /var/app/current/static/ && chmod 755 /var/app/current/static/ && python3 manage.py collectstatic --noinput > /var/log/collectstatic.log 2>&1"
    leader_only: true